# This ARG isn't used but prevents warnings in the build script
ARG CODE_VERSION
FROM continuumio/anaconda:latest

RUN mkdir -p /model \
      && apt-get update \
      && apt-get install -y libzmq3 libzmq3-dev \
      && conda install -y pyzmq \
      && conda update dask

RUN pip install protobuf tensorflow tensorflow-serving-api

WORKDIR /container

COPY containers/python/__init__.py containers/python/grpc_server.py   /container/

ENV CLIPPER_MODEL_PATH=/model

# vim: set filetype=dockerfile:
