ARG CODE_VERSION
FROM 81santi81/py-grpc:${CODE_VERSION}

COPY clipper_admin/clipper_admin/python_container_conda_deps.txt /lib/
RUN conda install -y --file /lib/python_container_conda_deps.txt

COPY containers/python/python_grpc_closure_container.py containers/python/python_grpc_closure_container_entry.sh /container/
COPY clipper_admin/ /lib/clipper_admin
RUN pip install /lib/clipper_admin

ENV PROTOCOL gRPC
EXPOSE 7000
CMD ["/container/python_grpc_closure_container_entry.sh"]

